{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": ["src/**/*.ts"],
  "lib": ["es2015"]
}